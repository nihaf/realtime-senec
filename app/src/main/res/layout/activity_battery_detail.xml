<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".BatteryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Header with Battery Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical">

            <app.juky.squircleview.views.SquircleConstraintLayout
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:elevation="@dimen/squircle_elevation"
                app:squircle_background_color="@color/gray_100"
                app:squircle_border_color="@color/gray_400"
                app:squircle_border_width="@dimen/squircle_border_width">

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/icon_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_battery"
                    app:tint="@color/primary_sage_500" />

            </app.juky.squircleview.views.SquircleConstraintLayout>

        </LinearLayout>

        <!-- Loading indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible"
            app:indicatorColor="@color/primary_sage_500" />

        <!-- Data Container -->
        <LinearLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Battery Status Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/battery_detail_status"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_label"
                android:textStyle="bold" />

            <app.juky.squircleview.views.SquircleConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:padding="@dimen/spacing_medium"
                app:squircle_background_color="@color/surface_card"
                app:squircle_border_color="@color/gray_200"
                app:squircle_border_width="@dimen/squircle_border_width_thin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/battery_detail_state"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_label" />

                        <TextView
                            android:id="@+id/text_battery_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_text"
                            android:textColor="@color/primary_sage_500"
                            android:textSize="@dimen/text_size_value"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/battery_detail_soc"
                            android:textSize="@dimen/text_size_label" />

                        <TextView
                            android:id="@+id/text_value_soc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_text"
                            android:textColor="@color/primary_sage_500"
                            android:textSize="@dimen/text_size_value"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:text="@string/unit_percent"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </app.juky.squircleview.views.SquircleConstraintLayout>

            <!-- Battery Values Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/battery_detail_values"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_label"
                android:textStyle="bold" />

            <app.juky.squircleview.views.SquircleConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                app:squircle_background_color="@color/surface_card"
                app:squircle_border_color="@color/gray_200"
                app:squircle_border_width="@dimen/squircle_border_width_thin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Power -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/battery_detail_power"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_label" />

                        <TextView
                            android:id="@+id/text_value_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_text"
                            android:textColor="@color/primary_sage_500"
                            android:textSize="@dimen/text_size_value"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:text="@string/unit_watt"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Voltage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/battery_detail_voltage"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_label" />

                        <TextView
                            android:id="@+id/text_value_voltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_text"
                            android:textColor="@color/primary_sage_500"
                            android:textSize="@dimen/text_size_value"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:text="@string/unit_volt"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Current -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/battery_detail_current"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_label" />

                        <TextView
                            android:id="@+id/text_value_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_text"
                            android:textColor="@color/primary_sage_500"
                            android:textSize="@dimen/text_size_value"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:text="@string/unit_ampere"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </app.juky.squircleview.views.SquircleConstraintLayout>

        </LinearLayout>

        <!-- Error message -->
        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/battery_detail_error"
            android:textColor="@color/error"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
