<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealtimeSenecApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_sage_500</item>
        <item name="colorPrimaryVariant">@color/primary_sage_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/energy_amber_200</item>
        <item name="colorSecondaryVariant">@color/energy_amber_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/text_primary</item>

        <!-- Add this line to make small components (like default buttons) use the squircle shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RealtimeSenecApp.Squircle</item>

    </style>
</resources>