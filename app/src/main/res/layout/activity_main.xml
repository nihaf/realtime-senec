<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/info_label_State"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/text_value_fuel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_label_fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/info_label_FuelGauge"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_label_status" />

    <TextView
        android:id="@+id/text_value_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/text_value_fuel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/text_label_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_value_fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/text_label_fuel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_main_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:baselineAligned="false"
            android:gravity="bottom|top">

            <LinearLayout
                android:id="@+id/row1_col1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_pv_generation"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_solar_panel"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_pv_generated"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/east_west"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_pv_east"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/status_pv_generated_east"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/text_label_pv_west"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/status_pv_generated_west"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_pv_east_west"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_value_pv_generation_east"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="4dp"
                        android:layout_weight="0.5"
                        android:text="@string/empty_text"
                        android:textAlignment="center"
                        android:textSize="@dimen/main_value_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_value_pv_generation_west"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="4dp"
                        android:layout_weight="0.5"
                        android:text="@string/empty_text"
                        android:textAlignment="center"
                        android:textSize="@dimen/main_value_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_unit_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ro1_col2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_battery"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_battery_charge"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:baselineAligned="false"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/row2_col1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_house"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_home_consumption"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2_col2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_grid"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_reuse_electricity"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_grid_export"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_battery_voltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/info_label_BatteryVoltage"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="147dp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="333dp" />

                    <TextView
                        android:id="@+id/text_value_battery_voltage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="8dp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="333dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_battery_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/info_label_BatteryCurrent" />

                    <TextView
                        android:id="@+id/text_value_battery_current"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/empty_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_wallbox_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/info_label_wallbox_state"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="147dp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="333dp" />

                    <TextView
                        android:id="@+id/text_value_wallbox_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="8dp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="333dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_wallbox_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/info_label_wallbox_current"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="147dp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="333dp" />

                    <TextView
                        android:id="@+id/text_value_wallbox_current"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="8dp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="333dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_wallbox_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/info_label_wallbox_total_power"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="147dp"
                        tools:layout_editor_absoluteX="96dp"
                        tools:layout_editor_absoluteY="333dp" />

                    <TextView
                        android:id="@+id/text_value_wallbox_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        android:textStyle="bold"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="8dp"
                        tools:layout_editor_absoluteX="243dp"
                        tools:layout_editor_absoluteY="333dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>