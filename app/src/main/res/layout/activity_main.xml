<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/info_label_State"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_value_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/text_label_status"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_main_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="bottom|top"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/row1_col1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_pv_generation"
                    android:layout_width="@dimen/main_icons"
                    android:layout_height="@dimen/main_icons"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    app:srcCompat="@drawable/small_icon_solar_panel" />

                <TextView
                    android:id="@+id/text_title_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_pv_generated"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_values"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ro1_col2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="@dimen/main_icons"
                    android:layout_height="@dimen/main_icons"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    app:srcCompat="@drawable/small_icon_battery" />

                <TextView
                    android:id="@+id/text_title_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_battery_charge"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_values"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="16dp" />

                <TextView
                    android:id="@+id/text_label_battery_voltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_BatteryVoltage"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="147dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_editor_absoluteY="333dp" />

                <TextView
                    android:id="@+id/text_value_battery_voltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="8dp"
                    tools:layout_editor_absoluteX="243dp"
                    tools:layout_editor_absoluteY="333dp" />

                <TextView
                    android:id="@+id/text_label_battery_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_BatteryCurrent" />

                <TextView
                    android:id="@+id/text_value_battery_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/row2_col1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="@dimen/main_icons"
                    android:layout_height="@dimen/main_icons"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    app:srcCompat="@drawable/small_icon_house" />

                <TextView
                    android:id="@+id/text_title_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_home_consumption"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_values"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2_col2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_grid"
                    android:layout_width="@dimen/main_icons"
                    android:layout_height="@dimen/main_icons"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    app:srcCompat="@drawable/small_icon_reuse_electricity" />

                <TextView
                    android:id="@+id/text_title_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_grid_export"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_value_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_values"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>