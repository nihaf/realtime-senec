<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/main_section_spacing">

        <!-- Header Section: Status and Fuel Gauge -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_row_spacing"
            android:orientation="vertical">

            <!-- Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_label_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_State"
                    android:textSize="@dimen/text_size_header" />

                <TextView
                    android:id="@+id/text_value_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/text_size_header" />
            </LinearLayout>

            <!-- Fuel Gauge Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_label_fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_FuelGauge"
                    android:textSize="@dimen/text_size_header" />

                <TextView
                    android:id="@+id/text_value_fuel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/text_size_header" />
            </LinearLayout>
        </LinearLayout>

        <!-- Main Content Section -->
        <!-- Row 1: PV Generation and Battery -->
        <LinearLayout
            android:id="@+id/layout_main_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Column 1: PV Generation -->
            <LinearLayout
                android:id="@+id/row1_col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_pv_generation"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_solar_panel"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_pv_generated"
                    android:textSize="@dimen/text_size_label" />

                <!-- PV East/West Values -->
                <LinearLayout
                    android:id="@+id/layout_pv_east_west"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_value_pv_generation_east"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="4dp"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        android:textAlignment="center"
                        android:textSize="@dimen/main_value_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_value_pv_generation_west"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="4dp"
                        android:layout_weight="1"
                        android:text="@string/empty_text"
                        android:textAlignment="center"
                        android:textSize="@dimen/main_value_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- PV East/West Labels -->
                <LinearLayout
                    android:id="@+id/layout_east_west_labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_label_pv_east"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_pv_generated_east"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/text_label_pv_west"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_pv_generated_west"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_unit_pv_generation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Column 2: Battery -->
            <LinearLayout
                android:id="@+id/row1_col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_battery"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_battery_charge"
                    android:textSize="@dimen/text_size_label" />

                <TextView
                    android:id="@+id/text_value_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_battery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Home Consumption and Grid -->
        <LinearLayout
            android:id="@+id/layout_main_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/main_row_spacing"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Column 1: Home Consumption -->
            <LinearLayout
                android:id="@+id/row2_col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_house"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_home_consumption"
                    android:textSize="@dimen/text_size_label" />

                <TextView
                    android:id="@+id/text_value_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_home_consumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Column 2: Grid -->
            <LinearLayout
                android:id="@+id/row2_col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/image_grid"
                    android:layout_width="@dimen/main_icons_size"
                    android:layout_height="@dimen/main_icons_size"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/content_description_icons"
                    android:padding="@dimen/main_icons_padding"
                    app:srcCompat="@drawable/small_icon_reuse_electricity"
                    app:tint="@color/blue_800" />

                <TextView
                    android:id="@+id/text_label_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_grid_export"
                    android:textSize="@dimen/text_size_label" />

                <TextView
                    android:id="@+id/text_value_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="@string/empty_text"
                    android:textSize="@dimen/main_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_unit_grid_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_watt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Battery Details -->
        <LinearLayout
            android:id="@+id/layout_main_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_row_spacing"
            android:orientation="vertical">

            <!-- Battery Voltage Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_label_battery_voltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_BatteryVoltage" />

                <TextView
                    android:id="@+id/text_value_battery_voltage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/empty_text" />
            </LinearLayout>

            <!-- Battery Current Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_label_battery_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/info_label_BatteryCurrent" />

                <TextView
                    android:id="@+id/text_value_battery_current"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/empty_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>